% Creative Orange + Blue Theme
% beamercolorthemecustom-creative-orange.sty

\mode<presentation>

% Define custom colors - Creative Orange + Blue
\definecolor{primarycolor}{RGB}{232, 97, 0} % Bright Orange
\definecolor{secondarycolor}{RGB}{10, 94, 162} % Royal Blue
\definecolor{accentcolor}{RGB}{255, 204, 153} % Light Orange
\definecolor{backgroundcolor}{RGB}{252, 252, 252} % Off White
\definecolor{textcolor}{RGB}{51, 51, 51} % Dark Gray

% Set basic colors
\setbeamercolor{background canvas}{bg=backgroundcolor}
\setbeamercolor{normal text}{fg=textcolor}
\setbeamercolor{structure}{fg=primarycolor}

% Title and header colors
\setbeamercolor{title}{fg=primarycolor}
\setbeamercolor{frametitle}{fg=primarycolor}
\setbeamercolor{titlelike}{fg=primarycolor}

% Block colors
\setbeamercolor{block title}{bg=primarycolor, fg=white}
\setbeamercolor{block body}{bg=white, fg=textcolor}

% Alert block colors
\setbeamercolor{block title alerted}{bg=secondarycolor, fg=white}
\setbeamercolor{block body alerted}{bg=white, fg=textcolor}

% Example block colors
\setbeamercolor{block title example}{bg=accentcolor, fg=textcolor}
\setbeamercolor{block body example}{bg=white, fg=textcolor}

% Items colors
\setbeamercolor{alerted text}{fg=secondarycolor}
\setbeamercolor{itemize item}{fg=primarycolor}
\setbeamercolor{itemize subitem}{fg=primarycolor}
\setbeamercolor{itemize subsubitem}{fg=primarycolor}
\setbeamercolor{enumerate item}{fg=primarycolor}
\setbeamercolor{enumerate subitem}{fg=primarycolor}
\setbeamercolor{enumerate subsubitem}{fg=primarycolor}

% Button and other UI elements
\setbeamercolor{button}{bg=secondarycolor, fg=white}
\setbeamercolor{section in toc}{fg=primarycolor}
\setbeamercolor{subsection in toc}{fg=secondarycolor}

\mode<all>